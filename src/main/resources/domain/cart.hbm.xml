<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="domain">
    <class name="Cart" table="Carts">
        <id name="id" column="CartID">
            <generator class="increment"/>
        </id>
        <property name="time" column="Clock"/>

        <one-to-one name="address" class="domain.Address"/>

        <set name="cheeses" table="Cartentries" cascade="save-update" lazy="false" fetch="select"> <!--inverse="true"-->
            <key>
                <column name="CartID" not-null="true" />
            </key>
            <one-to-many class="domain.MultiCheese" />
        </set>
    </class>
</hibernate-mapping>